{
    "parser": "@babel/eslint-parser",
    "extends": [
      "standard",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "semi": "error",
      "eqeqeq": [
        "error",
        "smart"
      ],
      "no-debugger": "off",
      "space-before-function-paren": "off",
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "camelcase": [
        "error",
        {
          "ignoreDestructuring": true,
          "properties": "never"
        }
      ],
      "no-multi-spaces": "error",
      "max-len": [
        "error",
        {
          "code": 150
        }
      ],
      "wrap-iife": [
        "error",
        "outside"
      ]
    }
  }